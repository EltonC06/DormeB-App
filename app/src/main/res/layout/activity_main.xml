<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/verticalScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline6">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnChuva"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="chuva"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/chuva_play" />

            <ImageButton
                android:id="@+id/btnTrovao"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="trovao"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/trovao_play" />

            <ImageButton
                android:id="@+id/btnVentilador"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="ventilador"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ventilador_play" />

            <ImageButton
                android:id="@+id/btnClimatizador"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="climatizador"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/climatizador_play" />

            <ImageButton
                android:id="@+id/btnGuarda"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="guarda"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/guarda_play" />

            <ImageButton
                android:id="@+id/btnCidade"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="cidade"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/cidade_play" />

            <ImageButton
                android:id="@+id/btnFloresta"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="floresta"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/floresta_play" />

            <ImageButton
                android:id="@+id/btnPraia"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="praia"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/praia_play" />

            <ImageButton
                android:id="@+id/btnFogueira"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@null"
                android:contentDescription="fogueira"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/fogueira_play" />
        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/textMusicaNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Som selecionado"
        android:textAlignment="center"
        android:textColor="@color/BlueforText"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textAlignment="center"
        android:textColor="@color/AnotherBlueforText"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:srcCompat="@drawable/botao_play" />

</androidx.constraintlayout.widget.ConstraintLayout>