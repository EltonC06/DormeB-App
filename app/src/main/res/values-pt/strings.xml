    <!-- Main activity -->

    <string name="message_audio_choose">Selecione um áudio para dormir</string>

    <string name="audio_rain">Chuva</string>
    <string name="audio_desc_rain">Essa melodia suave e calma é um dos métodos mais antigos usados para cair no sono</string>

    <string name="audio_thunder">Chuva com trovão</string>
    <string name="audio_desc_thunder">Relaxe com o som das gotas de chuva e os trovões distantes, criando uma atmosfera calma e envolvente</string>

    <string name="audio_fan">Ventilador</string>
    <string name="audio_desc_fan">Essa melodia, um pouco moderna, além de esfriar o ambiente (as vezes) também ajuda a relaxar o seu corpo depois de um dia corrido</string>

    <string name="audio_night_guard">Sirene do guarda nortuno</string>
    <string name="audio_desc_night_guard">Nem tanto desconhecida, essa é a melodia favorita dos que dormem tranquilo somente quando se sentem seguros</string>

    <string name="audio_street">Som ambiente de rua</string>
    <string name="audio_desc_street">Ouça os sons dos carros passando ao longe e o vento suave sussurrando entre as árvores. Esta combinação cria uma atmosfera calma e tranquila, perfeita para relaxar e refletir</string>

    <string name="audio_forest">Floresta</string>
    <string name="audio_desc_forest">Transporte-se para a natureza com o tranquilo som dos pássaros e o sussurro das folhas</string>

    <string name="audio_air_conditioner">Ar-Condicionado</string>
    <string name="audio_desc_air_conditioner">Essa melodia, além de esfriar o ambiente, também colabora para esfriar a cabeça de quem a escuta</string>

    <string name="audio_beach">Praia</string>
    <string name="audio_desc_beach">Relaxe ao som das ondas quebrando suavemente na costa</string>

    <string name="audio_fireplace">Fogueira</string>
    <string name="audio_desc_fireplace">Uma atmosfera acolhedora criada pelo crepitar reconfortante das chamas</string>

    <string name="audio_clock">Relógio</string>
    <string name="audio_desc_clock">Som de tic tac do relógio para quem tem medo de perder a hora</string>

    <string name="audio_cicada">Cigarra</string>
    <string name="audio_desc_cicada">Essa "suave" canção da cigarra pode tanto relaxar quanto ensurdecer quem estiver por perto</string>

    <string name="audio_cricket">Grilo</string>
    <string name="audio_desc_cricket">O primitivo barulho de grilo é usado desde 7500 A.C. para dormir e relaxar</string>

    <string name="audio_wind">Vento</string>
    <string name="audio_desc_wind">O clássico barulho de vento que dá a sensação de estar voando</string>

    <string name="audio_waterfall">Cachoeira</string>
    <string name="audio_desc_waterfall">O reconfortante barulho de cachoeira é capaz de fazer o usuário relaxar, porém é recomendado que este não tenha bebido muita água antes de dormir</string>

    <string name="audio_goose">Ganso</string>
    <string name="audio_desc_goose">Durma tranquilamente ouvindo o som reconfortante dos gansos na lagoa</string>

